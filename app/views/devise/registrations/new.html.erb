<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'form-signin'}) do |f| %>

<h2 class='text-center'>Sign up</h2>

  <%= f.error_notification %>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: false,
                placeholder: "Email" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: false,
                placeholder: "Password" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: false,
                placeholder: "Confirm Password" %>

    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
    <p>Already have an account? <%= render "devise/shared/links" %> </p>

<% end %>
